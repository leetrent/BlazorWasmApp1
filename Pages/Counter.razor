@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;


    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    void IncrementCount()
    {       
        System.Console.WriteLine("[Counter.razor][IncrementCount] => currentCount(before): " + currentCount);
        System.Console.WriteLine("[Counter.razor][IncrementCount] => IncrementAmount.....: " + IncrementAmount);
        currentCount += IncrementAmount;
        System.Console.WriteLine("[Counter.razor][IncrementCount] => currentCount(after): " + currentCount);

    }
}
